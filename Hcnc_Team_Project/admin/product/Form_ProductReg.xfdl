        trace("가져온 내용: " + sContent);
        trace("내용 타입: " + typeof sContent);
        
        if(!sContent || sContent === "undefined" || sContent === "null" || sContent === null) {
            return "";
        }
        
        return String(sContent);
        
    } catch(e) {
        trace("에디터 내용 가져오기 실패: " + e.message);
        return "";
    }
};

